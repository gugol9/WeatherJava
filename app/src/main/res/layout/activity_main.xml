<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <ImageView android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:scaleType="centerCrop"
               android:src="@color/cardview_dark_background"
               android:id="@+id/idIVBack" tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="-16dp"/>
    <TextView
            android:text="Miasto"
            android:layout_width="188dp"
            android:layout_height="50dp" android:id="@+id/miasto"
            tools:layout_editor_absoluteX="16dp"
            android:textColor="@color/white"
            android:gravity="center"
            tools:ignore="MissingConstraints" android:visibility="visible" tools:visibility="visible"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintTop_toTopOf="@+id/idIVBack" android:layout_marginTop="76dp"/>
    <TextView
            android:text="Temperatura"
            android:layout_width="188dp"
            android:padding="5dp"
            android:layout_height="50dp" android:id="@+id/temperatura"
            android:textColor="@color/white"
            android:gravity="center"
            tools:ignore="MissingConstraints" android:visibility="visible" tools:visibility="visible"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:layout_marginTop="76dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/miasto"/>

    <TextView
            android:text="CiÅ›nienie"
            android:layout_width="188dp"
            android:padding="5dp"
            android:layout_height="50dp" android:id="@+id/cisnienie"
            android:textColor="@color/white"
            android:gravity="center"
            tools:ignore="MissingConstraints" android:visibility="visible" tools:visibility="visible"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/temperatura" app:layout_constraintStart_toEndOf="@+id/wiatr"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Wiatr"
            android:layout_width="188dp"
            android:padding="5dp"
            android:layout_height="50dp" android:id="@+id/wiatr"
            tools:layout_editor_absoluteX="16dp"
            android:textColor="@color/white"
            android:gravity="center"
            tools:ignore="MissingConstraints" android:visibility="visible" tools:visibility="visible"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/miasto"/>
    <TextView
            android:text="Opady"
            android:layout_width="188dp"
            android:padding="5dp"
            android:layout_height="50dp" android:id="@+id/opady"
            android:textColor="@color/white"
            android:gravity="center"
            tools:ignore="MissingConstraints" android:visibility="visible" tools:visibility="visible"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/cisnienie" app:layout_constraintStart_toStartOf="@+id/idIVBack"
            android:layout_marginStart="212dp"/>
    <TextView
            android:text="Indeks UV"
            android:layout_width="188dp"
            android:padding="5dp"
            android:layout_height="50dp" android:id="@+id/indeksuv"
            tools:layout_editor_absoluteX="16dp"
            android:textColor="@color/white"
            android:gravity="center"
            tools:ignore="MissingConstraints" android:visibility="visible" tools:visibility="visible"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/wiatr"/>


</androidx.constraintlayout.widget.ConstraintLayout>